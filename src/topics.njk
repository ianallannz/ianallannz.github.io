---
layout: base.njk
title: Topics
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /blog/topics/{{ tag | slug }}/index.html
---


<header>
    {% include "navbar.njk" %}
    <div class="page-name blog-name">
        <h1># <a href="/blog">Blog</a></h1>
    </div>
    {% include "profile.njk" %}
    <div class="cta blog topic">
        <h1>## Topic</h1>
        <p class="featured-post">{{ tag }}</p>
    </div>
</header>
<main>

    <section id="posts" class="posts">
        <div class="posts-list topic">
            <h2>## {{ tag }}</h2>

            {% for post in collections[tag] | reverse %}
            <article class="post-preview">
                <h2>{{ post.data.postNumber }}. <a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                <p class="post-date">{{ post.date | date("d MMMM yyyy") }}</p>
                <p class="post-blurb">{{ post.data.excerpt }}</p>
            </article>
            {% endfor %}
        </div>
        <div class="sidebar">
            {% include "blog-topics-list.njk" %}
        </div>

    </section>


</main>